<%- include('header'); -%>
<body>
    
    <div class="box" id="heading">

        <h1 >Today is <%= kindOfDay%>!</h1>
    </div>
    
  
    <div class="box">
        
            <% for (let i=0;i<newTasks.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= newTasks[i] %></p>
            </div>
            <% }; %>
        
        
        <form class="item" action="/" method="post">
            <input type="text" name="new_item" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="list" value= <%= kindOfDay%> >+</button>
        </form>
        
    </div>
<%- include('footer'); -%>
